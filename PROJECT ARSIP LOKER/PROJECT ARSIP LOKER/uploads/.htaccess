# Prevent direct access to uploaded files
# Only allow access through the application

# Deny access to all files
<Files "*">
    Order Deny,Allow
    Deny from all
</Files>

# Allow access only to images for preview
<FilesMatch "\.(jpg|jpeg|png|gif)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Prevent execution of PHP files
<FilesMatch "\.php$">
    Order Deny,Allow
    Deny from all
</FilesMatch>
